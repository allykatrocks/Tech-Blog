<div>
  <div id="posts">
    {{#each posts as |post|}}
    <div class="card">
      <a href="/api/posts/{{post.id}}"><div class="btn">{{post.title}}</div></a>
      <div>by: {{post.user.username}}</div>
      {{#each post.comments as |comment|}}
        <div>{{comment.comment_text}}</div>
        <div>by: {{comment.user.username}}</div>
        <div><span>{{format_date createdAt}}</span>
        </div>
      {{/each}}
      </div>
    {{/each}}
  </div>
</div>