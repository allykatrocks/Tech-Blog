<div>
    <div id="posts">
        {{#each posts as |post|}}
            <div>{{post.title}}</div>
            <div>by: {{post.user.username}}</div>
            {{#each post.comments as |comment|}}
            <div>{{comment.comment_text}}</div>
            <div>by: {{comment.user.username}}</div>
            {{/each}}
        {{/each}}
    </div>
</div>