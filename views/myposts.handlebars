<div>
    <div id="dashboard-posts">
        {{#each myposts as |post|}}
        <a class="list-item flex-row justify-space-between" href="/dashboard/edit/{{id}}"
>
        <div>{{post.title}}</div>
         <div>by: {{post.user.username}}</div>
            {{#each post.comments as |comment|}}
            <div>{{comment.comment_text}}</div>
            <div>by: {{comment.user.username}}</div>
            <div><span>{{format_date createdAt}}</span>
        </div>
        </a>
            {{/each}}
        {{/each}}
    </div>
</div>